# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_BASE_URL=http://localhost:8000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321

# TikTok Configuration
# CRITICAL: Add a valid session cookie to avoid bot detection
# Get from browser: DevTools > Application > Cookies > tiktok.com > copy 'sessionid' value
# See TIKTOK_SETUP.md for detailed instructions
TIKTOK_COOKIE=

# Optional: Use a proxy to avoid IP blocks (residential proxies recommended)
# Format: http://user:pass@proxy:port or socks5://user:pass@proxy:port
TIKTOK_PROXY=

# Headless mode: true = faster but more detectable, false = shows browser window
# Set to false if getting bot detection errors
TIKTOK_HEADLESS=true

# Download Configuration
DOWNLOAD_PATH=./downloads
MAX_CONCURRENT_DOWNLOADS=3
VIDEO_QUALITY=highest

# Logging
LOG_LEVEL=INFO
